{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./assets/*"]
    },
    "lib": ["dom", "dom.iterable", "ES2020"],
    "outDir": "./public/build"
  },
  "include": [
    "./assets/**/*.ts",
    "./assets/**/*.tsx"
, "assets/bootstrap.js"  ],
  "exclude": [
    "node_modules",
    "public/build"
  ]
}
