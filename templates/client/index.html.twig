{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
<div class="w-full px-4 py-6">
    <div class="mb-6 md:mb-8 text-center md:text-left flex flex-col md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-900 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" style="color: #c99b64;" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                Liste des Clients
            </h1>
            <p class="text-sm sm:text-base text-gray-600 mt-2">Gérez vos clients et leurs informations</p>
        </div>
        <a href="{{ path('client_new') }}" class="btn inline-flex items-center mt-4 md:mt-0 px-4 py-2 bg-blue-600 text-white rounded-lg transition duration-150 ease-in-out text-sm font-semibold shadow">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
            Nouveau client
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-md overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gradient-to-r from-blue-50 to-indigo-50">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Nom</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Type</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Adresse</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">SIREN</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Contact</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Email</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                {% for client in clients %}
                    <tr class="hover:bg-blue-50 transition" id="client-row-{{ client.clientId }}">
                        <td class="px-4 py-3 text-sm text-gray-900 font-medium">{{ client.nom }}</td>
                        <td class="px-4 py-3 text-sm text-gray-600">{{ client.type.value }}</td>
                        <td class="px-4 py-3 text-sm text-gray-600">{{ client.adresse }}</td>
                        <td class="px-4 py-3 text-sm text-gray-600">{{ client.siren }}</td>
                        <td class="px-4 py-3 text-sm text-gray-600">{{ client.contactNom }}</td>
                        <td class="px-4 py-3 text-sm text-gray-600">{{ client.contactEmail }}</td>
                        <td class="px-4 py-3 text-sm">
                            <div class="flex space-x-2">
                                <a href="{{ path('client_edit', {'id': client.clientId}) }}" class="inline-flex items-center p-2 bg-white rounded-md hover:bg-gray-100 ring-1 ring-inset ring-gray-200" title="Modifier">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                </a>
                                <form
                                        action="{{ path('client_delete', {'id': client.clientId}) }}"
                                        method="post"
                                        data-action="submit->confirm-modal#open"
                                        data-confirm-modal-title-value="Supprimer"
                                        data-confirm-modal-message-value="Supprimer « {{ client.nom }} » ?"
                                        data-confirm-modal-confirm-text-value="Supprimer"
                                        data-confirm-modal-confirm-class-value="btn-delete inline-flex items-center px-4 py-2  text-white rounded-md "
                                >
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-client' ~ client.clientId) }}">
                                    <button type="submit" 
                                            class="inline-flex items-center p-2 bg-white rounded-md hover:bg-red-50 ring-1 ring-inset ring-gray-200 text-red-600" 
                                            title="Supprimer">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="py-6 px-4 text-center text-sm italic text-gray-500">Aucun client trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

 
{% endblock %}