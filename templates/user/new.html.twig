{% extends 'base.html.twig' %}

{% block title %}Créer un utilisateur{% endblock %}

{% block body %}
<div class="px-4 py-5">
    <h1 class="text-2xl font-bold mb-6 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" style="color: #c99b64;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
        </svg>
        Créer un utilisateur
    </h1>

    <div class="bg-white p-6 rounded-lg shadow">
        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                {{ form_errors(form.nom, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
            </div>
            
            <div class="mb-4">
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                {{ form_errors(form.email, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
            </div>
            
            <div class="mb-6">
                {{ form_label(form.role, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.role, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                {{ form_errors(form.role, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.adherent, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.adherent, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.adherent, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
            </div>
            
            <div class="flex gap-2">
                <button type="submit" class="btn px-4 py-2 text-white rounded transition">Créer</button>
                <a href="{{ path('user_index') }}" class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition">Retour à la liste</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %} 