{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<div class="px-4 py-5 sm:px-6">
    <div class="md:flex md:items-center md:justify-between">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:tracking-tight flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" style="color: #c99b64;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Modifier l'utilisateur
            </h2>
            <p class="mt-1 text-sm text-gray-600">Modifiez les informations de l'utilisateur.</p>
        </div>
    </div>
</div>

<div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                <div class="sm:col-span-3">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-1">
                        {{ form_widget(form.nom, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
                    </div>
                    {{ form_errors(form.nom, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                </div>
                
                <div class="sm:col-span-3">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-1">
                        {{ form_widget(form.email, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
                    </div>
                    {{ form_errors(form.email, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                </div>
                
                <div class="sm:col-span-3">
                    {{ form_label(form.role, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-1">
                        {{ form_widget(form.role, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
                    </div>
                    {{ form_errors(form.role, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                </div>

                <div class="sm:col-span-3">
                    {{ form_label(form.adherent, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-1">
                        {{ form_widget(form.adherent, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
                    </div>
                    {{ form_errors(form.adherent, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                </div>
                
                {% if form.plainPassword is defined %}
                <div class="sm:col-span-3">
                    {{ form_label(form.plainPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-1">
                        {{ form_widget(form.plainPassword, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
                    </div>
                    <p class="mt-1 text-xs text-gray-500">Laissez vide pour conserver le mot de passe actuel.</p>
                    {{ form_errors(form.plainPassword, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                </div>
                {% endif %}
            </div>
            
            <div class="flex justify-end space-x-3 pt-5">
                <a href="{{ path('user_index') }}" class="rounded-md bg-white py-2 px-3 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                    Retour
                </a>
                <button type="submit" class="btn inline-flex justify-center rounded-md bg-blue-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">
                    Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %} 