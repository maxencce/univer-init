{% extends 'base.html.twig' %}

{% block title %}Reporting Affaire - {{ affaire.master.code }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    [x-cloak] { display: none !important; }
</style>
{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="{{ path('reporting_index') }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.293 15.707a1 1 0 010-1.414L14.586 10l-4.293-4.293a1 1 0 111.414-1.414l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Reporting
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <a href="{{ path('reporting_affaires_list') }}" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">Affaires</a>
                </div>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">{{ affaire.master.code }}</span>
                </div>
            </li>
        </ol>
    </nav>
    
    <h1 class="text-2xl font-semibold mb-6">Reporting Affaire : {{ affaire.master.code }} - V{{ affaire.versionNumber }}</h1>
    
    <div class="bg-white shadow overflow-hidden rounded-lg mb-6">
        <div class="px-4 py-5 sm:px-6">
            <h2 class="text-lg leading-6 font-medium text-gray-900">Informations de l'affaire</h2>
        </div>
        <div class="border-t border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 px-4 py-5 sm:p-6">
                <div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Client :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ affaire.master.client.nom }}</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Description :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ affaire.description ?: 'Non spécifié' }}</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Statut :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ affaire.statut.value }}</span>
                    </div>
                </div>
                <div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Date début :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ affaire.dateDebut ? affaire.dateDebut|date('d/m/Y') : 'Non spécifié' }}</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Date fin :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ affaire.dateFin ? affaire.dateFin|date('d/m/Y') : 'Non spécifié' }}</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Créé le :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ affaire.createdAt ? affaire.createdAt|date('d/m/Y') : '-' }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {# Dashboard #}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-5">
                <div class="text-3xl font-bold text-blue-600">{{ reportingData.totaux.montantGlobal|number_format(2, ',', ' ') }} €</div>
                <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">Montant total</div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="grid grid-cols-3 divide-x">
                <div class="p-5">
                    <div class="text-3xl font-bold text-gray-700">{{ reportingData.totaux.sitesCount }}</div>
                    <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">Sites</div>
                </div>
                <div class="p-5">
                    <div class="text-3xl font-bold text-gray-700">{{ reportingData.totaux.adherentsCount }}</div>
                    <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">Adhérents</div>
                </div>
                <div class="p-5">
                    <div class="text-3xl font-bold text-gray-700">{{ reportingData.bpus|length }}</div>
                    <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">BPUs</div>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="grid grid-cols-3 divide-x">
                <div class="p-5">
                    <div class="flex items-center">
                        <span class="w-3 h-3 bg-blue-200 rounded-full mr-2"></span>
                        <span class="text-sm text-gray-500">Multitech</span>
                    </div>
                    <div class="text-lg font-semibold mt-1">{{ reportingData.totaux.parActivite.MULTITECH|number_format(2, ',', ' ') }} €</div>
                </div>
                <div class="p-5">
                    <div class="flex items-center">
                        <span class="w-3 h-3 bg-yellow-200 rounded-full mr-2"></span>
                        <span class="text-sm text-gray-500">Élec</span>
                    </div>
                    <div class="text-lg font-semibold mt-1">{{ reportingData.totaux.parActivite.ELEC|number_format(2, ',', ' ') }} €</div>
                </div>
                <div class="p-5">
                    <div class="flex items-center">
                        <span class="w-3 h-3 bg-green-200 rounded-full mr-2"></span>
                        <span class="text-sm text-gray-500">CVC</span>
                    </div>
                    <div class="text-lg font-semibold mt-1">{{ reportingData.totaux.parActivite.CVC|number_format(2, ',', ' ') }} €</div>
                </div>
            </div>
        </div>
    </div>
    
    {# Répartition par catégorie #}
    <div class="bg-white shadow overflow-hidden rounded-lg mb-8">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Répartition par catégorie de prestations</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
                <div class="lg:col-span-7">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Catégorie</th>
                                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Montant</th>
                                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">%</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for cat in reportingData.totaux.parCategorie %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ cat.categorie }}</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">{{ cat.montant|number_format(2, ',', ' ') }} €</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                                        {% if reportingData.totaux.montantGlobal > 0 %}
                                            {{ (cat.montant / reportingData.totaux.montantGlobal * 100)|round(1) }}%
                                        {% else %}
                                            0%
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr class="bg-gray-50">
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-700">Total</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-700">{{ reportingData.totaux.montantGlobal|number_format(2, ',', ' ') }} €</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-700">100%</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="lg:col-span-5">
                    <div class="h-64 flex items-center justify-center">
                        <canvas id="categoriesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {# Liste des adhérents #}
    <div x-data="{ open: false }" class="bg-white shadow overflow-hidden rounded-lg mb-6">
        <div class="border-b border-gray-200 bg-gray-50 px-4 py-4 sm:px-6">
            <div @click="open = !open" class="flex justify-between items-center cursor-pointer">
                <h2 class="text-lg leading-6 font-medium text-gray-900">
                    <div class="flex items-center">
                        <svg x-show="!open" class="h-5 w-5 text-gray-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                        </svg>
                        <svg x-show="open" class="h-5 w-5 text-gray-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 10a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                        Adhérents affectés
                    </div>
                </h2>
                <div class="flex items-center gap-2">
                    <span class="px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                        {{ reportingData.adherents|length }} adhérents
                    </span>
                </div>
            </div>
        </div>
        
        <div x-show="open" x-cloak x-transition class="px-4 py-5 sm:p-6">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Montant total</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for adherentData in reportingData.adherents %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ adherentData.adherent.nom }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">{{ adherentData.montantTotal|number_format(2, ',', ' ') }} €</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="{{ path('reporting_adherent', {'id': adherentData.adherent.adherentId}) }}" class="text-blue-600 hover:text-blue-900">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    {# Liste des sites #}
    <div x-data="{ open: false }" class="bg-white shadow overflow-hidden rounded-lg mb-6">
        <div class="border-b border-gray-200 bg-gray-50 px-4 py-4 sm:px-6">
            <div @click="open = !open" class="flex justify-between items-center cursor-pointer">
                <h2 class="text-lg leading-6 font-medium text-gray-900">
                    <div class="flex items-center">
                        <svg x-show="!open" class="h-5 w-5 text-gray-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                        </svg>
                        <svg x-show="open" class="h-5 w-5 text-gray-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 10a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                        Sites affectés
                    </div>
                </h2>
                <div class="flex items-center gap-2">
                    <span class="px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                        {{ reportingData.sites|length }} sites
                    </span>
                </div>
            </div>
        </div>
        
        <div x-show="open" x-cloak x-transition class="px-4 py-5 sm:p-6">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Site</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Adresse</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Adhérents</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Montant total</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for siteData in reportingData.sites %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ siteData.site.nom }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ siteData.site.codeGesec }}</td>
                            <td class="px-6 py-4 text-sm text-gray-500">{{ siteData.site.adresse }}</td>
                            <td class="px-6 py-4 text-sm">
                                {% for adherentData in siteData.adherents %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                        {% if adherentData.activite == 'MULTITECH' %}bg-blue-100 text-blue-800
                                        {% elseif adherentData.activite == 'ELEC' %}bg-yellow-100 text-yellow-800
                                        {% elseif adherentData.activite == 'CVC' %}bg-green-100 text-green-800
                                        {% endif %} mr-1">
                                        {{ adherentData.adherent.nom }}
                                    </span>
                                {% endfor %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">{{ siteData.montantTotal|number_format(2, ',', ' ') }} €</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="{{ path('reporting_site', {'id': siteData.site.siteId}) }}" class="text-blue-600 hover:text-blue-900">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    {# Liste des BPUs #}
    <div x-data="{ open: false }" class="bg-white shadow overflow-hidden rounded-lg mb-6">
        <div class="border-b border-gray-200 bg-gray-50 px-4 py-4 sm:px-6">
            <div @click="open = !open" class="flex justify-between items-center cursor-pointer">
                <h2 class="text-lg leading-6 font-medium text-gray-900">
                    <div class="flex items-center">
                        <svg x-show="!open" class="h-5 w-5 text-gray-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
