{% extends 'base.html.twig' %}

{% block title %}Reporting Site - {{ site.nom }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    [x-cloak] { display: none !important; }
</style>
{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="{{ path('reporting_index') }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.293 15.707a1 1 0 010-1.414L14.586 10l-4.293-4.293a1 1 0 111.414-1.414l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Reporting
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <a href="{{ path('reporting_sites_list') }}" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">Sites</a>
                </div>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">{{ site.codeGesec }} - {{ site.nom }}</span>
                </div>
            </li>
        </ol>
    </nav>
    
    <h1 class="text-2xl font-semibold mb-6">Reporting Site : {{ site.codeGesec }} - {{ site.nom }}</h1>
    
    <div class="bg-white shadow overflow-hidden rounded-lg mb-6">
        <div class="px-4 py-5 sm:px-6">
            <h2 class="text-lg leading-6 font-medium text-gray-900">Informations du site</h2>
        </div>
        <div class="border-t border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 px-4 py-5 sm:p-6">
                <div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Adresse :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ site.adresse }}</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Code postal :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ site.codePostal }}</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Client :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ site.client.nom }}</span>
                    </div>
                </div>
                <div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Contact :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ site.contactNom ?: 'Non spécifié' }}</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-sm font-medium text-gray-500">Email :</span>
                        <span class="ml-2 text-sm text-gray-900">{{ site.contactEmail ?: 'Non spécifié' }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {# Dashboard #}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-5">
                <div class="text-3xl font-bold text-blue-600">{{ reportingData.totaux.montantGlobal|number_format(2, ',', ' ') }} €</div>
                <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">Montant total</div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="grid grid-cols-3 divide-x">
                <div class="p-5">
                    <div class="text-3xl font-bold text-gray-700">{{ reportingData.totaux.adherentCount }}</div>
                    <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">Adhérents</div>
                </div>
                <div class="p-5">
                    <div class="text-3xl font-bold text-gray-700">{{ reportingData.totaux.affaireCount }}</div>
                    <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">Affaires</div>
                </div>
                <div class="p-5">
                    <div class="text-3xl font-bold text-gray-700">{{ reportingData.totaux.categories|length }}</div>
                    <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">Catégories</div>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="grid grid-cols-3 divide-x">
                <div class="p-5">
                    <div class="flex items-center">
                        <span class="w-3 h-3 bg-blue-200 rounded-full mr-2"></span>
                        <span class="text-sm text-gray-500">Multitech</span>
                    </div>
                    <div class="text-lg font-semibold mt-1">{{ reportingData.totaux.parActivite.MULTITECH|number_format(2, ',', ' ') }} €</div>
                </div>
                <div class="p-5">
                    <div class="flex items-center">
                        <span class="w-3 h-3 bg-yellow-200 rounded-full mr-2"></span>
                        <span class="text-sm text-gray-500">Élec</span>
                    </div>
                    <div class="text-lg font-semibold mt-1">{{ reportingData.totaux.parActivite.ELEC|number_format(2, ',', ' ') }} €</div>
                </div>
                <div class="p-5">
                    <div class="flex items-center">
                        <span class="w-3 h-3 bg-green-200 rounded-full mr-2"></span>
                        <span class="text-sm text-gray-500">CVC</span>
                    </div>
                    <div class="text-lg font-semibold mt-1">{{ reportingData.totaux.parActivite.CVC|number_format(2, ',', ' ') }} €</div>
                </div>
            </div>
        </div>
    </div>
    
    {# Répartition par catégorie #}
    <div class="bg-white shadow overflow-hidden rounded-lg mb-8">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Répartition par catégorie de prestations</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
                <div class="lg:col-span-7">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Catégorie</th>
                                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Montant</th>
                                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">%</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for cat in reportingData.totaux.parCategorie %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ cat.categorie }}</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">{{ cat.montant|number_format(2, ',', ' ') }} €</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                                        {% if reportingData.totaux.montantGlobal > 0 %}
                                            {{ (cat.montant / reportingData.totaux.montantGlobal * 100)|round(1) }}%
                                        {% else %}
                                            0%
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr class="bg-gray-50">
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-700">Total</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-700">{{ reportingData.totaux.montantGlobal|number_format(2, ',', ' ') }} €</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-700">100%</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="lg:col-span-5">
                    <div class="h-64 flex items-center justify-center">
                        <canvas id="categoriesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {# Liste des affaires #}
    {% for affaire in reportingData.affaires %}
    <div x-data="{ open: false }" class="bg-white shadow overflow-hidden rounded-lg mb-6">
        <div class="border-b border-gray-200 bg-gray-50 px-4 py-4 sm:px-6">
            <div @click="open = !open" class="flex justify-between items-center cursor-pointer">
                <h2 class="text-lg leading-6 font-medium text-gray-900">
                    <div class="flex items-center">
                        <svg x-show="!open" class="h-5 w-5 text-gray-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                        </svg>
                        <svg x-show="open" class="h-5 w-5 text-gray-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 10a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                        {{ affaire.affaire.code }} - {{ affaire.version.statut.value }}
                    </div>
                </h2>
                <div class="flex items-center gap-2">
                    <span class="px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                        {{ affaire.montantTotal|number_format(2, ',', ' ') }} €
                    </span>
                    <span class="px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                        {{ affaire.bpus|length }} BPU
                    </span>
                </div>
            </div>
        </div>
        
        <div x-show="open" x-cloak x-transition class="px-4 py-5 sm:p-6" id="affaire{{ affaire.affaire.id }}">
            <div class="mb-6">
                <h3 class="text-sm font-medium text-gray-900 mb-3">Adhérents affectés :</h3>
                <div class="flex flex-wrap gap-2">
                    {% for adherentInfo in affaire.adherents %}
                        <div class="flex items-center rounded-md bg-gray-50 px-2 py-1">
                            <span class="font-medium text-sm text-gray-900 mr-2">{{ adherentInfo.adherent.nom }}</span>
                            {% if adherentInfo.activite == 'MULTITECH' %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    Multitech
                                </span>
                            {% elseif adherentInfo.activite == 'ELEC' %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    Élec
                                </span>
                            {% elseif adherentInfo.activite == 'CVC' %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    CVC
                                </span>
                            {% endif %}
                            <a href="{{ path('reporting_adherent', {'id': adherentInfo.adherent.adherentId}) }}" class="ml-2 text-blue-600 hover:text-blue-900">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                                </svg>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
            
            <h3 class="text-sm font-medium text-gray-900 mb-3">Répartition par catégorie :</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
                {% for cat in affaire.montantParCategorie %}
                    <div class="bg-gray-50 rounded-lg p-4">
                        <div class="text-sm font-semibold text-gray-900 mb-1">{{ cat.categorie }}</div>
                        <div class="text-lg font-bold text-gray-900">{{ cat.montant|number_format(2, ',', ' ') }} €</div>
                        <div class="text-xs text-gray-500 mt-1">{{ (cat.montant / affaire.montantTotal * 100)|round(1) }}% du total</div>
                    </div>
                {% endfor %}
            </div>
            
            <h3 class="text-sm font-medium text-gray-900 mb-3">Détail des BPUs :</h3>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="sticky left-0 bg-gray-50 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Catégorie</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Quantité</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Prix unitaire</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Montant total</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for bpu in affaire.bpus %}
                        <tr class="hover:bg-gray-50">
                            <td class="sticky left-0 bg-white px-6 py-4 text-sm text-gray-900">{{ bpu.categorie }}</td>
                            <td class="px-6 py-4 text-sm">
                                {% if bpu.type == 'ELEC' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                        Élec
                                    </span>
                                {% elseif bpu.type == 'CVC' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        CVC
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        Autre
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">{{ bpu.bpu.description }}</td>
                            <td class="px-6 py-4 text-right text-sm text-gray-500">{{ bpu.quantite }}</td>
                            <td class="px-6 py-4 text-right text-sm text-gray-500">{{ bpu.prixUnitaire|number_format(2, ',', ' ') }} €</td>
                            <td class="px-6 py-4 text-right text-sm font-medium text-gray-900">{{ bpu.montant|number_format(2, ',', ' ') }} €</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr class="bg-gray-50">
                            <td colspan="5" class="sticky left-0 bg-gray-50 px-6 py-4 text-right text-sm font-medium text-gray-900">Total</td>
                            <td class="px-6 py-4 text-right text-sm font-medium text-gray-900">{{ affaire.montantTotal|number_format(2, ',', ' ') }} €</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    {% else %}
    <div class="rounded-md bg-yellow-50 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-yellow-800">Aucune affaire active trouvée pour ce site.</h3>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Création du graphique de répartition par catégorie
        var categoriesData = {{ reportingData.totaux.parCategorie|json_encode|raw }};
        var montantGlobal = {{ reportingData.totaux.montantGlobal }};
        if (categoriesData.length > 0 && montantGlobal > 0) {
            var labels = categoriesData.map(item => item.categorie);
            var values = categoriesData.map(item => item.montant);
            
            // Génération de couleurs
            var backgroundColors = [
                '#3b82f6', '#10b981', '#f59e0b', '#ef4444', '#8b5cf6', 
                '#6b7280', '#111827', '#1d4ed8', '#065f46', '#0369a1'
            ];
            
            var ctx = document.getElementById('categoriesChart').getContext('2d');
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        data: values,
                        backgroundColor: backgroundColors.slice(0, values.length),
                        hoverBackgroundColor: backgroundColors.slice(0, values.length),
                        borderWidth: 1,
                        borderColor: '#ffffff',
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'right',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    var label = context.label || '';
                                    var value = context.parsed || 0;
                                    var total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    var percentage = total > 0 ? Math.round((value / total) * 100) : 0;
                                    return label + ': ' + value.toLocaleString('fr-FR', {minimumFractionDigits: 2, maximumFractionDigits: 2}) + ' € (' + percentage + '%)';
                                }
                            }
                        }
                    }
                }
            });
        }
    });
</script>
{% endblock %}