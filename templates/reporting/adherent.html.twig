{% extends 'base.html.twig' %}

{% block title %}Reporting Adhérent - {{ adherent.nom }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    [x-cloak] { display: none !important; }
</style>
{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="{{ path('reporting_index') }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.293 15.707a1 1 0 010-1.414L14.586 10l-4.293-4.293a1 1 0 111.414-1.414l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Reporting
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <a href="{{ path('reporting_adherents_list') }}" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">Adhérents</a>
                </div>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">{{ adherent.nom }}</span>
                </div>
            </li>
        </ol>
    </nav>
    
    <h1 class="text-2xl font-semibold mb-6">Reporting Adhérent : {{ adherent.nom }}</h1>
    
    {# Dashboard #}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-5">
                <div class="text-3xl font-bold text-blue-600">{{ reportingData.totaux.montantGlobal|number_format(2, ',', ' ') }} €</div>
                <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">Montant total</div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="grid grid-cols-3 divide-x">
                <div class="p-5">
                    <div class="text-3xl font-bold text-gray-700">{{ reportingData.totaux.siteCount }}</div>
                    <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">Sites</div>
                </div>
                <div class="p-5">
                    <div class="text-3xl font-bold text-gray-700">{{ reportingData.totaux.affaireCount }}</div>
                    <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">Affaires</div>
                </div>
                <div class="p-5">
                    <div class="text-2xl font-bold text-gray-700">
                        {% set totalBPUs = 0 %}
                        {% for affaire in reportingData.affaires %}
                            {% for site in affaire.sites %}
                                {% set totalBPUs = totalBPUs + site.bpusCount %}
                            {% endfor %}
                        {% endfor %}
                        {{ totalBPUs }}
                    </div>
                    <div class="text-sm text-gray-500 uppercase tracking-wide mt-1">BPUs</div>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="grid grid-cols-3 divide-x">
                <div class="p-5">
                    <div class="flex items-center">
                        <span class="w-3 h-3 bg-blue-200 rounded-full mr-2"></span>
                        <span class="text-sm text-gray-500">Multitech</span>
                    </div>
                    <div class="text-lg font-semibold mt-1">{{ reportingData.totaux.parActivite.MULTITECH|number_format(2, ',', ' ') }} €</div>
                </div>
                <div class="p-5">
                    <div class="flex items-center">
                        <span class="w-3 h-3 bg-yellow-200 rounded-full mr-2"></span>
                        <span class="text-sm text-gray-500">Élec</span>
                    </div>
                    <div class="text-lg font-semibold mt-1">{{ reportingData.totaux.parActivite.ELEC|number_format(2, ',', ' ') }} €</div>
                </div>
                <div class="p-5">
                    <div class="flex items-center">
                        <span class="w-3 h-3 bg-green-200 rounded-full mr-2"></span>
                        <span class="text-sm text-gray-500">CVC</span>
                    </div>
                    <div class="text-lg font-semibold mt-1">{{ reportingData.totaux.parActivite.CVC|number_format(2, ',', ' ') }} €</div>
                </div>
            </div>
        </div>
    </div>
    
    {# Liste des affaires #}
    {% for affaire in reportingData.affaires %}
    <div x-data="{ open: false }" class="bg-white shadow overflow-hidden rounded-lg mb-6">
        <div class="border-b border-gray-200 bg-gray-50 px-4 py-4 sm:px-6">
            <div @click="open = !open" class="flex justify-between items-center cursor-pointer">
                <h2 class="text-lg leading-6 font-medium text-gray-900">
                    <div class="flex items-center">
                        <svg x-show="!open" class="h-5 w-5 text-gray-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                        </svg>
                        <svg x-show="open" class="h-5 w-5 text-gray-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 10a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                        {{ affaire.affaire.code }} - {{ affaire.client.nom }}
                    </div>
                </h2>
                <div class="flex items-center gap-2">
                    <span class="px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                        {{ affaire.montantTotal|number_format(2, ',', ' ') }} €
                    </span>
                    <span class="px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                        {{ affaire.sites|length }} sites
                    </span>
                </div>
            </div>
        </div>
        <div x-show="open" x-cloak x-transition class="px-4 py-5 sm:p-6" id="affaire{{ affaire.affaire.id }}">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead>
                        <tr>
                            <th scope="col" class="sticky left-0 bg-white px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Site</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Adresse</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Activités</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Montant total</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Multitech</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Élec</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">CVC</th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">BPUs</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for site in affaire.sites %}
                        <tr class="hover:bg-gray-50">
                            <td class="sticky left-0 bg-white px-6 py-4 text-sm font-medium text-gray-900">{{ site.site.nom }}</td>
                            <td class="px-6 py-4 text-sm text-gray-500">{{ site.site.codeGesec }}</td>
                            <td class="px-6 py-4 text-sm text-gray-500">{{ site.site.adresse }}</td>
                            <td class="px-6 py-4 text-sm">
                                {% for activite in site.activites %}
                                    {% if activite == 'MULTITECH' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            Multitech
                                        </span>
                                    {% elseif activite == 'ELEC' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                            Élec
                                        </span>
                                    {% elseif activite == 'CVC' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            CVC
                                        </span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td class="px-6 py-4 text-right text-sm font-medium">{{ site.montantTotal|number_format(2, ',', ' ') }} €</td>
                            <td class="px-6 py-4 text-right text-sm text-gray-500">{{ site.montantParActivite.MULTITECH > 0 ? (site.montantParActivite.MULTITECH|number_format(2, ',', ' ') ~ ' €') : '-' }}</td>
                            <td class="px-6 py-4 text-right text-sm text-gray-500">{{ site.montantParActivite.ELEC > 0 ? (site.montantParActivite.ELEC|number_format(2, ',', ' ') ~ ' €') : '-' }}</td>
                            <td class="px-6 py-4 text-right text-sm text-gray-500">{{ site.montantParActivite.CVC > 0 ? (site.montantParActivite.CVC|number_format(2, ',', ' ') ~ ' €') : '-' }}</td>
                            <td class="px-6 py-4 text-center text-sm text-gray-500">{{ site.bpusCount }}</td>
                            <td class="px-6 py-4 text-right text-sm font-medium">
                                <a href="{{ path('reporting_site', {'id': site.site.siteId}) }}" class="text-blue-600 hover:text-blue-900">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr class="bg-gray-50">
                            <td colspan="4" class="sticky left-0 bg-gray-50 px-6 py-4 text-sm font-medium text-gray-900">Total pour cette affaire</td>
                            <td class="px-6 py-4 text-right text-sm font-medium">{{ affaire.montantTotal|number_format(2, ',', ' ') }} €</td>
                            <td colspan="5"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    {% else %}
    <div class="rounded-md bg-yellow-50 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-yellow-800">Aucune affaire active trouvée pour cet adhérent.</h3>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}