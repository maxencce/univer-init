{% extends 'base.html.twig' %}

{% block title %}Gestion des adhérents{% endblock %}

{% block body %}
<div class="px-4 py-5 sm:px-6">
    <div class="flex items-start space-x-3 mb-4">
        <a href="{{ path('affaire_show', {id: affaire.master.id}) }}" class="inline-flex items-center text-gray-600 hover:text-gray-800 underline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7 7-7" />
            </svg>
            Retour
        </a>
    </div>
    <div class="md:flex md:items-center md:justify-between">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:tracking-tight">Gestion des adhérents</h2>
            <p class="mt-1 text-lg font-semibold text-amber-700">{{ affaire.master.code }}</p>
        </div>
    </div>
</div>

<div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6 max-w-4xl mx-auto">
    <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
        <h3 class="text-lg font-medium leading-6 text-gray-900 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Informations de l'affaire
        </h3>
    </div>
    <div class="px-4 py-5 sm:p-0">
        <dl class="sm:divide-y sm:divide-gray-200">
            <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Client</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">{{ affaire.master.client.nom }}</dd>
            </div>
            <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Statut</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                    <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
                        {{ affaire.statut.value }}
                    </span>
                </dd>
            </div>
            <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Période</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                    {% if affaire.dateDebut %}
                        Du {{ affaire.dateDebut|date('d/m/Y') }}
                    {% endif %}
                    {% if affaire.dateFin %}
                        au {{ affaire.dateFin|date('d/m/Y') }}
                    {% endif %}
                </dd>
            </div>
        </dl>
    </div>
</div>

<div class="grid grid-cols-1 gap-8 lg:grid-cols-2 max-w-6xl mx-auto">
    <div>
        <div class="bg-white shadow sm:rounded-lg border border-gray-100">
            <div class="px-4 py-5 sm:p-6 bg-gradient-to-r from-blue-50 to-white border-b border-gray-100">
                <h3 class="text-base font-semibold leading-6 text-gray-900 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    Ajouter un nouvel adhérent
                </h3>
            </div>
            <div class="px-4 py-5 sm:p-6">
                <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        <div>
                            {{ form_label(form.adherent, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                            <div class="mt-2">
                                {{ form_widget(form.adherent, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6'}}) }}
                            </div>
                            {{ form_errors(form.adherent, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="flex justify-end space-x-3 pt-2">
                            <a href="{{ path('affaire_show', {id: affaire.master.id}) }}" class="rounded-md bg-white py-2 px-3 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                                Annuler
                            </a>
                            <button type="submit" class="btn inline-flex justify-center rounded-md bg-blue-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                                </svg>
                                Ajouter
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    
    <div>
        <div class="bg-white shadow sm:rounded-lg border border-gray-100">
            <div class="px-4 py-5 sm:px-6 bg-gradient-to-r from-blue-50 to-white border-b border-gray-100">
                <h3 class="text-base font-semibold leading-6 text-gray-900 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    Adhérents existants 
                    <span class="ml-2 inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                        {{ existingAdherents|length }}
                    </span>
                </h3>
            </div>
            <div class="px-4 py-5 sm:p-6">
                {% if existingAdherents|length > 0 %}
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-300">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900">Nom</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date d'ajout</th>
                                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                                        <span class="sr-only">Actions</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 bg-white">
                                {% for affaireAdherent in existingAdherents %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900">
                                            {{ affaireAdherent.adherent.nom }}
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                            {{ affaireAdherent.createdAt|date('d/m/Y') }}
                                        </td>
                                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                                            <button type="button" 
                                                    onclick="document.getElementById('confirmDelete{{ affaire.id }}-{{ affaireAdherent.adherent.adherentId }}').style.display='flex'" 
                                                    class="inline-flex items-center p-2 bg-white rounded-md hover:bg-red-50 ring-1 ring-inset ring-gray-200 text-red-600">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewbox="0 0 24 24" stroke="#9f5b76">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7H4m3 0v12a2 2 0 002 2h6a2 2 0 002-2V7M9 7V4h6v3"/>
													</svg>
                                            </button>

                                            
                                            
                                            <!-- Modal de confirmation de suppression -->
                                            <div id="confirmDelete{{ affaire.id }}-{{ affaireAdherent.adherent.adherentId }}" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden z-50">
                                                <div class="bg-white rounded-lg p-6 w-auto mx-4">
                                                    <p class="mb-6 text-gray-700">Êtes-vous sûr de vouloir supprimer l'adhérent
                                                        <strong>{{ affaireAdherent.adherent.nom }}</strong> de cette affaire ?
                                                    </p>
                                                    <div class="flex justify-end space-x-3">
                                                        <button type="button" class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300" 
                                                                onclick="document.getElementById('confirmDelete{{ affaire.id }}-{{ affaireAdherent.adherent.adherentId }}').style.display='none'">
                                                            Annuler
                                                        </button>
                                                        <form action="{{ path('affaire_remove_adherent', {'id': affaire.id}) }}" method="post">
                                                            <input type="hidden" name="adherent_id" value="{{ affaireAdherent.adherent.adherentId }}">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete-adherent' ~ affaireAdherent.adherent.adherentId) }}">
                                                            <button type="submit" class="btn-delete inline-flex items-center px-4 py-2 text-white rounded-md hover:bg-red-700">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                                </svg>
                                                                Supprimer
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-10 bg-gray-50 rounded-lg border border-gray-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <p class="text-sm text-gray-500 italic">Aucun adhérent ajouté pour le moment.</p>
                        <p class="text-xs text-gray-400 mt-1">Utilisez le formulaire ci-contre pour ajouter des adhérents à cette affaire</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %} 