{% extends 'base.html.twig' %}

{% block title %}Affaires
{% endblock %}

{% block body %}
	<div class="w-full px-4 py-6">
		<div class="mb-6 md:mb-8 text-center md:text-left flex flex-col md:flex-row md:items-center md:justify-between">
			<div>
				<h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-900 flex items-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" style="color: #c99b64;" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>
					Liste des Affaires
				</h1>
				<p class="text-sm sm:text-base text-gray-600 mt-2">Gérez vos contrats et opérations</p>
			</div>
			{% if is_granted('ROLE_GESEC') %}
				<a href="{{ path('affaire_new') }}" class="btn inline-flex items-center mt-4 md:mt-0 px-4 py-2 bg-blue-600 text-white rounded-lg transition duration-150 ease-in-out text-sm font-semibold shadow">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
					Nouvelle affaire
				</a>
			{% endif %}
		</div>

		{% if searchForm is defined %}
			<div class="bg-white rounded-lg shadow-sm p-4 mb-6" x-data="{ open: true }" x-init="open = (window.innerWidth >= 768)">
				<div class="flex justify-between items-center mb-4">
					<h2 class="text-lg font-medium text-gray-900">Filtres</h2>
					<div class="flex items-center space-x-3">
						<button type="button" @click="open = !open" class="md:hidden text-sm text-blue-600 hover:text-blue-800 flex items-center">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h16a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1v-2zM3 16a1 1 0 011-1h16a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1v-2z"/>
							</svg>
							<span>Filtres</span>
						</button>
					</div>
				</div>

				<div x-show="open" x-cloak class="transition">
					{{ form_start(searchForm) }}
					<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-6 gap-4 items-end">
						<div>
							{{ form_label(searchForm.code, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
							{{ form_widget(searchForm.code, {'attr': {'class':'block w-full rounded-md border-gray-300 shadow-sm sm:text-sm'}}) }}
						</div>

						<div>
							{{ form_label(searchForm.client, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
							{{ form_widget(searchForm.client, {'attr': {'class':'block w-full rounded-md border-gray-300 shadow-sm sm:text-sm pr-8'}}) }}
						</div>

						<div>
							{{ form_label(searchForm.statut, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
							{{ form_widget(searchForm.statut, {'attr': {'class':'block w-full rounded-md border-gray-300 shadow-sm sm:text-sm pr-8'}}) }}
						</div>

						<div>
							{{ form_label(searchForm.dateDebutMin, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
							{{ form_widget(searchForm.dateDebutMin, {'attr': {'class':'block w-full rounded-md border-gray-500 shadow-sm sm:text-sm'}}) }}
						</div>

						<div>
							{{ form_label(searchForm.dateDebutMax, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
							{{ form_widget(searchForm.dateDebutMax, {'attr': {'class':'block w-full rounded-md border-gray-500 shadow-sm sm:text-sm'}}) }}
						</div>

						<div>
							{{ form_label(searchForm.archive, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
							{{ form_widget(searchForm.archive, {'attr': {'class':'block rounded-md pr-8'}}) }}
						</div>
					</div>

					<div class="mt-4 flex flex-col md:flex-row md:justify-between md:items-center space-y-3 md:space-y-0">
						<div class="flex items-center space-x-2">
							<a href="{{ path('affaire_index') }}" class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition duration-150 text-sm font-medium">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
								Réinitialiser
							</a>
							<button type="submit" class="btn inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg transition duration-150 text-sm font-medium">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/></svg>
								Filtrer
							</button>
						</div>
					</div>
					{{ form_end(searchForm) }}
				</div>
			</div>

		{% endif %}

		<div class="bg-white rounded-xl shadow-md overflow-x-auto overflow-y-visible">
			<table class="min-w-full divide-y divide-gray-200">
				<thead class="bg-gradient-to-r from-blue-50 to-indigo-50">
					<tr>
						<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Code</th>
						<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Description</th>
						<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Client</th>
						<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Début</th>
						<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Fin</th>
						<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Version</th>
						<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700">Archivée</th>
						{% if is_granted('ROLE_GESEC') %}
							<th class="px-4 py-3 text-right text-xs font-semibold text-gray-700">Actions</th>
						{% endif %}
					</tr>
				</thead>
				<tbody class="divide-y divide-gray-100">
					{% for affaire in affaires %}
						<tr class="hover:bg-blue-50 transition cursor-pointer" onclick="window.location.href='{{ path('affaire_show', {id: affaire.id}) }}'">
							<td class="px-4 py-3 text-sm text-gray-900 font-medium">{{ affaire.code }}</td>
							<td class="px-4 py-3 text-sm text-gray-600">{{ affaire.currentVersion.description }}</td>
							<td class="px-4 py-3 text-sm text-gray-600">{{ affaire.client.nom }}</td>
							<td class="px-4 py-3 text-sm text-gray-600">{{ affaire.currentVersion.dateDebut ? affaire.currentVersion.dateDebut|date('d/m/Y') : '' }}</td>
							<td class="px-4 py-3 text-sm text-gray-600">{{ affaire.currentVersion.dateFin ? affaire.currentVersion.dateFin|date('d/m/Y') : '' }}</td>
							<td class="px-4 py-3 text-sm text-gray-600">{{ affaire.currentVersion.versionNumber }}</td>
							<td class="px-4 py-3">
								{% if affaire.archive %}
									<span class="inline-block px-2 py-1 text-xs font-bold bg-green-100 text-green-700 rounded-full">Oui</span>
								{% else %}
									<span class="inline-block px-2 py-1 text-xs font-bold bg-gray-100 text-gray-500 rounded-full">Non</span>
								{% endif %}
							</td>
							{% if is_granted('ROLE_GESEC') %}
								<td class="px-4 py-3 text-right">
									<div class="inline-flex items-center space-x-2">
										<a onclick="event.stopPropagation();" href="{{ path('affaire_edit', {id: affaire.currentVersion.id}) }}" title="Modifier" class="inline-flex items-center p-2 bg-white rounded-md hover:bg-gray-100 ring-1 ring-inset ring-gray-200">
											<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-700" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
												<path d="M12 20h9"/>
												<path d="M16.5 3.5a2.121 2.121 0 113 3L7 19l-4 1 1-4 12.5-12.5z"/>
											</svg>
										</a>

                        {% if not affaire.archive %}
                            <form
                                action="{{ path('affaire_archive', { id: affaire.id }) }}"
                                method="post"
                                data-action="submit->confirm-modal#open"
                                data-confirm-modal-title-value="Archiver"
                                data-confirm-modal-message-value="Archiver « {{ affaire.code }} » ?"
                                data-confirm-modal-confirm-text-value="Archiver"
                                data-confirm-modal-confirm-class-value="btn-delete inline-flex items-center px-4 py-2 text-white rounded-md"
                                onclick="event.stopPropagation();"
                            >
                                <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ affaire.id) }}">
                                <button
                                    type="submit"
                                    title="Archiver"
                                    class="inline-flex items-center p-2 bg-white rounded-md hover:bg-amber-50 ring-1 ring-inset ring-gray-200 text-amber-600"
                                >
                                    <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" color="#9f5b76">
                                        <path stroke="currentColor" stroke-linejoin="round" stroke-width="2" d="M10 12v1h4v-1m4 7H6a1 1 0 0 1-1-1V9h14v9a1 1 0 0 1-1 1ZM4 5h16a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1Z"/>
                                    </svg>
                                </button>
                            </form>

                        {% endif %}

										<!-- SVG Archive -->
										
									</div>
								</td>
							{% endif %}
						</tr>
					{% else %}
						<tr>
							<td colspan="9" class="py-6 px-4 text-center text-sm italic text-gray-500">Aucune affaire trouvée.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
    

	<script>
		// Vérifier si des filtres sont actifs
function checkActiveFilters() {
const urlParams = new URLSearchParams(window.location.search);
if (urlParams.toString()) { // Si des filtres sont actifs, montrer le conteneur de filtres
document.getElementById('filterContainer').style.display = 'block';
document.getElementById('filterText').textContent = 'Masquer les filtres';
document.getElementById('filterIcon').style.transform = 'rotate(180deg)';
}
}

// Fonction pour basculer l'affichage des filtres
function toggleFilterVisibility() {
const filterContainer = document.getElementById('filterContainer');
const filterText = document.getElementById('filterText');
const filterIcon = document.getElementById('filterIcon');

if (filterContainer.style.display === 'none') {
filterContainer.style.display = 'block';
filterText.textContent = 'Masquer les filtres';
filterIcon.style.transform = 'rotate(180deg)';
} else {
filterContainer.style.display = 'none';
filterText.textContent = 'Afficher les filtres';
filterIcon.style.transform = 'rotate(0deg)';
}
}

// Exécuter après le chargement de la page
window.addEventListener('DOMContentLoaded', function () {
checkActiveFilters();
});

function promptDuplicateCode(form) {
const current = form.closest('tr').querySelector('td').textContent.trim();
const code = prompt('Nouveau code pour la copie (laisser vide pour générer automatiquement):', current + '-copy');
if (code === null) 
return false;
 // cancel
form.querySelector('input[name=new_code]').value = code;
return true;
}
	</script>
{% endblock %}
