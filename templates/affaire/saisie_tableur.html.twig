{% extends 'base.html.twig' %}

{% block title %}Saisie des quantités{% endblock %}

{% block page_wrapper_class %}flex flex-col flex-1{% endblock %}
{% block body %}
<div data-controller="saisie-tableur" class="page-saisie-wrapper flex flex-col flex-1" data-saisie-tableur-version-id-value="{{ affaireVersion.id }}" data-saisie-tableur-sites-value='{{ sites|json_encode|e("html_attr") }}' style="padding:0; margin:0; min-height:0;">
    <div class="flex items-start space-x-3 px-3 pt-3 pb-2">
        <a href="{{ path('affaire_show', {id: affaireVersion.master.id}) }}" class="inline-flex items-center text-gray-600 hover:text-gray-800 underline text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7 7-7" />
            </svg>
            Retour
        </a>
        <div class="min-w-0 flex-1 pl-2">
            <h2 class="text-lg font-bold leading-6 text-gray-900 sm:truncate">Saisie des quantités - {{ affaireVersion.master.code }}</h2>
            <p class="mt-0.5 text-sm font-semibold" style="color: #c99b64;">{{ affaireVersion.master.client.nom }} - Version {{ affaireVersion.versionNumber }}</p>
        </div>
        <div class="pr-3 pt-1 hidden sm:flex items-center space-x-2">
            <button data-action="saisie-tableur#toggleAutoSave" data-saisie-tableur-target="autoSaveToggle" class="inline-flex items-center rounded-md bg-green-600 py-1 px-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500">Auto-save</button>
            <button data-action="saisie-tableur#reload" class="inline-flex items-center rounded-md bg-white py-1 px-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">Recharger</button>
            <button data-action="saisie-tableur#save" class="btn inline-flex items-center rounded-md bg-blue-600 py-1 px-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500">Sauvegarder</button>
        </div>
    </div>

    <div class="flex-1 flex overflow-hidden">
        {# Token CSRF caché pour les requêtes AJAX (utilisé par saisie_tableur_controller.js) #}
        <input type="hidden" name="_csrf_token" id="saisie_csrf_token" value="{{ csrf_token('submit') }}">

        {# Disposition : tableur principal (gauche) et liste des sites (droite) #}
        <div class="w-full flex flex-1 overflow-hidden">
            <div class="w-full lg:w-5/6 flex flex-1 h-full overflow-hidden p-2">
                <div id="saisie-tableur-hot" data-saisie-tableur-target="tableurContainer" class="saisie-tableur-container bg-white shadow sm:rounded-lg w-full h-full min-h-0 flex flex-col flex-1 overflow-auto"></div>
            </div>

            {# Section latérale : liste des sites (1/4 de la largeur) #}
            <div class="hidden lg:block lg:w-1/6 h-full">
                <div data-saisie-tableur-target="siteList" class="bg-white sm:rounded-lg p-4 h-full overflow-auto">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold text-gray-900">Sites affectés</h3>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            {{ sites|length }}
                        </span>
                    </div>

                    {% if sites %}
                        <div class="space-y-2 max-h-full overflow-y-auto">
                            {% for s in sites %}
                                <button data-site-id="{{ s.siteId }}" class="site-item w-full text-left px-3 py-2 rounded-md hover:bg-blue-50 bg-white border border-gray-200 hover:border-blue-300 transition duration-150 ease-in-out">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 mr-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                            </svg>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <p class="text-sm font-medium text-gray-900 truncate">{{ s.code }}</p>
                                            <p class="text-xs text-gray-500 truncate">{{ s.adresse }}</p>
                                        </div>
                                    </div>
                                </button>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-8">
                            <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                            <h3 class="mt-2 text-sm font-medium text-gray-900">Aucun site</h3>
                            <p class="mt-1 text-sm text-gray-500">Aucun site n'est affecté à cette affaire.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}