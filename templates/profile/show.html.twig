{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="max-w-3xl ml-6 px-4 py-8">
    <div class="bg-white shadow sm:rounded-lg p-6">
        <div class="flex items-center space-x-6 mb-4">
            <div class="h-16 w-16 rounded-full bg-gray-100 flex items-center justify-center text-2xl font-bold text-gray-700">
                {{ user.getNom()|slice(0,1)|upper }}
            </div>
            <div>
                <h1 class="text-2xl font-bold">Profil</h1>
                <p class="text-sm text-gray-600 mt-1">Informations de base</p>
            </div>
        </div>

        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 text-left">
            <div>
                <div class="text-sm font-medium text-gray-600">Nom</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">{{ user.getNom() }}</div>
            </div>
            <div>
                <div class="text-sm font-medium text-gray-600">Email</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">{{ user.getEmail() }}</div>
            </div>
            <div>
                <div class="text-sm font-medium text-gray-600">RÃ´le</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">{{ user.getRole().value }}</div>
            </div>
            <div>
                <div class="text-sm font-medium text-gray-600">Actif</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">{{ user.isEnabled() ? 'Oui' : 'Non' }}</div>
            </div>
        </div>

        <div class="mt-6 flex space-x-3">
            <a href="{{ path('profile_change_password') }}" class="btn inline-flex items-center px-4 py-2 rounded-md">Changer le mot de passe</a>
        </div>
    </div>
</div>
{% endblock %}


